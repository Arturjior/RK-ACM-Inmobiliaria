<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RK_Acm_Inmobiliaria" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cardview_dark_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RK_Acm_Inmobiliaria.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RK_Acm_Inmobiliaria.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RK_Acm_Inmobiliaria.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NavigationView.Text" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Otros estilos -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Estilo para el Ã­cono de hamburguesa -->
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>
</resources>