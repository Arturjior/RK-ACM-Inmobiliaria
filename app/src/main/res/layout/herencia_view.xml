<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.herencia.HerenciaFragment"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFondo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/herenciasfondo"/>

        <Button
            android:id="@+id/btnDescargaHerencia"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:backgroundTint="@color/teal_200"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHerencia"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFondo"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="start"
            android:textSize="18dp"
            android:textStyle="bold"
            android:justificationMode="inter_word"/>

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/tvHerencia"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/space">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imagenAhorra"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/tvAhorra"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/imagenOlvida"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/tvOlvida"
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imagenNoAdelantes"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/tvNoAdelantes"
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/imagenTranquilidad"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/tvTranquilidad"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/linear"/>

        <!--<Button
            android:id="@+id/linkweb"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_below="@+id/space1"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/red_dark"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />-->

    </RelativeLayout>

</ScrollView>